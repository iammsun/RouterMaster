<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="h5" android:textStyle="bold"/>
    <WebView android:id="@+id/webview" android:layout_width="match_parent"
             android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:paddingTop="20dp" android:text="native" android:textStyle="bold"/>
    <Button android:id="@+id/btn_a" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/url_a" android:textAllCaps="false"/>
    <Button android:id="@+id/btn_b" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/url_b" android:textAllCaps="false"/>
    <Button android:id="@+id/btn_c" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/url_c" android:textAllCaps="false"/>
    <Button android:id="@+id/btn_toast" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/url_toast" android:textAllCaps="false"/>

</LinearLayout>
